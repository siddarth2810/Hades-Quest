<%- include("partials/header") -%>



    <div class="container-fluid" id="list-section">
    
        <div class="row">
            <div class="col-lg-4">
              
                <div class="card" id="athenaCard">
                    <div class="list-icon-holder"  style="background-color: #f6b85b;">
                   
                        <img class="list-athena-logo" src="img/imageedit-5-3670121336-2.png" />
                        </div>
                    <div>
                        <% tasks.forEach(function(task) { %>
                            <form action="/increaseProgressAndDelete" method="post">
                                <li id="task">
                                    <input type="checkbox" name="checkbox" value="<%=task._id%>"
                                        onChange="this.form.submit()">
                                    <%= task.name %>
                                </li>
                            </form>
                            <% } )%>
                    </div>

                    <div class="add-task">
                        <form action="/" method="post">
                            <input type="text" placeholder="new challenge" name="newItem">
                            <button type="text">+</button>
                        </form>
                    </div>
                </div>

            </div>

